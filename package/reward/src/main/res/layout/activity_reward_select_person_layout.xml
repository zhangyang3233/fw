<?xml version="1.0" encoding="utf-8"?>
<com.zy.widgets.text.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:reward="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.hongyu.reward.widget.NetImageView
                    android:id="@+id/image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/defalut_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_h0"
                        tools:text="味千拉面" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingRight="20dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/text_h3"
                        tools:text="北京市北京市北京市北京存北京码头北京码头2组省委家属院172但远2楼102号" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/xuxian"
                android:layerType="software" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.hongyu.reward.widget.RoundImageView
                    android:id="@+id/header_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/defalut_head_img"
                    reward:riv_border_color="@color/white"
                    reward:riv_border_width="1dp"
                    reward:riv_corner_radius="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_gray_dark"
                        android:textSize="@dimen/text_h1"
                        tools:text="刘嘉玲" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gcr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_gray_dark"
                            android:textSize="@dimen/text_h2"
                            tools:text="好评率:90%" />

                        <TextView
                            android:id="@+id/order_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_gray_dark"
                            android:textSize="@dimen/text_h2"
                            tools:text="成交:5000单" />
                    </LinearLayout>

                    <com.hongyu.reward.widget.FiveStarSingle
                        android:id="@+id/my_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/xuxian"
                android:layerType="software" />

            <LinearLayout
                android:id="@+id/write_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/jcrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray_text"
                        android:textSize="16sp"
                        tools:text="就餐人数 04" />

                    <TextView
                        android:id="@+id/ddzs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/dark_gray_text"
                        android:textSize="16sp"
                        tools:text="您前面还有06桌等待" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/pwh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLength="10"
                    android:paddingBottom="25dp"
                    android:paddingTop="35dp"
                    android:textColor="#000000"
                    android:textSize="36sp"
                    tools:text="大桌1074" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/photo_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="205dp">

                <com.hongyu.reward.widget.NetImageView
                    android:id="@+id/photo_img"
                    android:layout_width="205dp"
                    android:layout_height="205dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/app_logo" />
                <TextView
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="点击查看大图"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:background="#99000000"
                    android:textColor="#eeeeee"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/noselect"
                style="@style/App.Comm.Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/tag_white_round_all"
                android:text="不选择"
                android:textColor="@color/app_main_title_text_color" />

            <Button
                android:id="@+id/select"
                style="@style/App.Comm.Button"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="选择该接单人" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="*对领赏人的相关信息不满意，可不予选择，继续等待其他领赏人。另外，我们为您保留最长10分钟的考虑时间，逾期仍未作出决定，此状态自动取消。"
            android:textColor="@color/text_red"
            android:textSize="12sp" />
    </LinearLayout>


</com.zy.widgets.text.OverScrollView>










